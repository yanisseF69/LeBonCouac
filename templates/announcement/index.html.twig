{% extends 'base.html.twig' %}

{% block title %}Les annonces!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <h1>Les annonces!</h1>

    <div class="count">
        <h4>Il y'a 
            {{ announcements.getTotalItemCount }}
            annonces au total:
        </h4>
    </div>

    {% for announcement in announcements %}

    <a href="/announcement/detail/{{announcement.id}}" style="text-decoration : none">
    <div class="card" >
        <div class="card-body">
            <h4 class="card-title">{{announcement.title}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">{{announcement.price}} €</h6>
            <p class="card-text">Crée le {{announcement.createdAt|date('Y/m/d') }} </br>
            par {{ announcement.user.pseudo }} </br>
            à {{announcement.city}}</p>
            
        </div>
    </div>
    </a>
    <div style="padding-bottom : 20px"></div>
    
    {% endfor %}
    </tbody>
    </table>
    <div class="d-flex justify-content-center">
        {{knp_pagination_render(announcements)}}
    </div>
    
</div>
{% endblock %}
